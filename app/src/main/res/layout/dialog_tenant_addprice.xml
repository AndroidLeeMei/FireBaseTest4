<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical|center_horizontal"
        android:background="@android:color/holo_orange_dark"
        android:text="新 增 費 用 資 料"
        android:textColor="@android:color/background_light"
        android:textSize="36dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical|center_horizontal"
            android:layout_weight="0.58"
            android:text="租金"
            android:textSize="25dp" />

        <Button
            android:id="@+id/txRentDate"
            style="@android:style/Widget.Button.Inset"

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical|center_horizontal"
            android:layout_weight="0.45"
            android:text=""
            android:textSize="20dp" />


        <EditText
            android:id="@+id/etRent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.55"
            android:inputType="number"

            android:textSize="25dp" />

        <TextView
            android:id="@+id/textView30"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.68"
            android:gravity="center_vertical|center_horizontal"
            android:textSize="25dp"
            android:text="元" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal|center_vertical"
            android:layout_weight="0.58"
            android:text="水費"
            android:textSize="25dp" />

        <Button
            android:id="@+id/txWaterDate"
            style="@android:style/Widget.Button.Inset"

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical|center_horizontal"
            android:text=""
            android:layout_weight="0.45"
            android:textSize="20dp"
            />

        <EditText
            android:id="@+id/etWater"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.55"
            android:inputType="number"

            android:textSize="25dp" />

        <TextView
            android:id="@+id/textView29"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical|center_horizontal"
            android:layout_weight="0.68"
            android:textSize="25dp"
            android:text="元" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.58"
            android:gravity="center_horizontal|center_vertical"
            android:text="電費"
            android:textSize="25dp" />

        <Button
            android:id="@+id/txEleDate"
            style="@android:style/Widget.Button.Inset"

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.45"
            android:gravity="center_vertical|center_horizontal"
            android:text=""
            android:textSize="20dp" />

        <EditText
            android:id="@+id/etElectricity"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.55"
            android:inputType="number"

            android:textSize="25dp" />

        <TextView
            android:id="@+id/textView28"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical|center_horizontal"
            android:layout_weight="0.68"
            android:textSize="25dp"
            android:text="元" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.58"
            android:gravity="center_vertical|center_horizontal"
            android:text="管理費"
            android:textSize="25dp"
            />

        <Button
            android:id="@+id/txManDate"
            style="@android:style/Widget.Button.Inset"

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.45"
            android:gravity="center_vertical|center_horizontal"
            android:text=""
            android:textSize="20dp"
            />

        <EditText
            android:id="@+id/etManagement"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.55"
            android:inputType="number"

            android:textSize="25dp" />

        <TextView
            android:id="@+id/textView27"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical|center_horizontal"
            android:layout_weight="0.68"
            android:textSize="25dp"
            android:text="元" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.58"
            android:gravity="center_vertical|center_horizontal"
            android:text="瓦斯費"
            android:textSize="25dp" />

        <Button
            android:id="@+id/txGasDate"
            style="@android:style/Widget.Button.Inset"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.45"
            android:gravity="center_vertical|center_horizontal"
            android:text=""
            android:textSize="20dp" />


        <EditText
            android:id="@+id/etGas"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.55"

            android:inputType="number"

            android:textSize="25dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical|center_horizontal"
            android:layout_weight="0.68"
            android:textSize="25dp"
            android:text="元" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <Button
        android:id="@+id/btnConfirm"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:textSize="25dp"
        android:text="確定" />
        <Button
            android:id="@+id/btnCancel"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:textSize="25dp"
            android:text="取消" />
    </LinearLayout>
</LinearLayout>